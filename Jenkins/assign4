boolean testResult = true
pipeline {
agent any

stages {
stage ('A') {
steps {
script { 
try {
sh ' pwd ' 
} catch (Exception e) {
echo "Stage A failed"    } 
testResult = false
     }
   }
}

stage ('B') {
steps { 
script {
if (testResult == true) {
echo " Executing stage B "    } 
else {
echo "Moving to next stage" }
     }
   }
}

stage ('C') {
steps {
script {
if (testResult == false) {
echo "Executing stage c"        }
          }
       }
      }
     }
    }
