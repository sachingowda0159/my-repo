boolean testResult = true
pipeline {
agent any

stages {
stage ('A') {
steps {
sh ' exit1 '
   }
}

stage ('B') {
steps { 
script {
if (testResult == true) {
echo " Executing stage B "    }
     }
   }
}

stage ('C') {
steps {
script {
if (testResult == false) {
echo "Executing stage c"        }
          }
       }
      }
     }
    }
