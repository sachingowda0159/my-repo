pipeline {
    agent any
    stages {
        stage('CHECKOUT') {
            steps {
                echo 'STAGE: CHECKOUT'
            }
        }

        stage('BUILD') {
            steps {
                echo 'STAGE: BUILD'
                sh 'exit 1'
            }
        }

        stage('DEPLOY') {
            steps {
                echo 'STAGE: DEPLOY'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
            cleanWs()
        }
        success {
            echo "All the stages are success"
            sh 'sleep 5'
        }

        failure {
             echo "Some stage failed sending notification"
        }
    }
}
